@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="my-4">Fatura Detay Sayfası</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active font-weight-bold"></li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyatı</th>
        <th>Tutar</th>
    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <td>@i.Aciklama</td>
            <td>@i.Miktar</td>
            <td>@i.BirimFiyati</td>
            <td>@i.Tutar</td>
        </tr>
    }
</table>
<a href="/Fatura/YeniKalem" class="btn btn-primary my-4">Yeni Kalem Girişi</a>


