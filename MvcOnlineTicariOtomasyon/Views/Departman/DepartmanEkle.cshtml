@model MvcOnlineTicariOtomasyon.Models.Siniflar.Departman
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-3 mx-1">Yeni Departman Sayfası</h2>
<br />
<form class="form-group" method="post">
    <div class="col-md-6">
        @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control", @placeholder = "Departman Adı" })
    </div>

    <button class="btn btn-info my-2 " style="margin-left:11px">Kaydet</button>
</form>

