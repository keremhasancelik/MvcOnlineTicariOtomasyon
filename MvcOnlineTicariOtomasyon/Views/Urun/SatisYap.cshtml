@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-4">Yeni Satış Sayfası</h2>
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Urunid)
    <input type="text" name="Urunid" value="@ViewBag.dgr4" class = "form-control mb-3 col-md-6" readonly />
    @Html.LabelFor(x => x.Personelid)
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control mb-3 col-md-6" })
    @Html.LabelFor(x => x.Cariid)
    @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control mb-3 col-md-6" })
    @Html.LabelFor(x => x.Adet)
    <input type="number" id="txt1" onchange="sum();" class = "form-control mb-3 col-md-6" name="Adet" min="1"  placeholder="Adet girin..." />
    @Html.LabelFor(x => x.Fiyat)
    <input type="text" id="txt2" name="Fiyat" value="@ViewBag.dgr5" class="form-control mb-3 col-md-6"  />
    @Html.LabelFor(x => x.ToplamTutar)
    <input type="text" id="txt3" name="ToplamTutar" value="" class="form-control mb-3 col-md-6"  />
    @Html.LabelFor(x => x.Tarih)
    <input type="datetime-local" name="Tarih" value="" class = "form-control mb-3 col-md-6" />
    
    <button class="btn btn-primary">Satış Yap</button>
</form>

<script>
    function sum() {
        var s1 = document.getElementById('txt1').value;
        var s2 = document.getElementById('txt2').value;
        var sonuc = parseInt(s1) * parseInt(s2);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }
    }
</script>
