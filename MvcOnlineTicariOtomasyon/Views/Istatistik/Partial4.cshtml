@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup3>
<div class="card-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Kategori Adı</th>
                <th>Progress Bar</th>
                <th style="width: 40px">Adet</th>
            </tr>
        </thead>
        <tbody>
            @{ int sirano = 0;}
            @foreach (var x in Model)
            {
                <tr>
                    <td>@{sirano++;} @sirano</td>
                    <td>@x.Kategori</td>
                    <td>
                        @if (x.Sayi < 2)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>

                        }
                        @if (x.Sayi == 2)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 70%"></div>
                            </div>

                        }
                        @if (x.Sayi == 3)
                        {
                            <div class="progress progress-xs progress-striped active">
                                <div class="progress-bar bg-success" style="width: 90%"></div>
                            </div>

                        }
                    </td>
                    @if (x.Sayi < 2)
                    {
                        <td><span class="badge bg-primary">@x.Sayi</span></td>

                    }
                    @if (x.Sayi > 1 && x.Sayi <= 2)
                    {
                        <td><span class="badge bg-warning">@x.Sayi</span></td>

                    }
                    @if (x.Sayi > 2 && x.Sayi <= 3)
                    {
                        <td><span class="badge bg-success">@x.Sayi</span></td>

                    }
                </tr>
            }

        </tbody>
    </table>
</div>